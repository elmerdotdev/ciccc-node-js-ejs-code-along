<%- include('partials/header', { desc: "This is the list of to dos." }) %>

  <h1><%= title %></h1>
  <p>Below are your list of to do items:</p>

  <ul class="todo-list">
    <% todos.forEach(todo => { %>
      <li class="<%= todo.completed ? 'color-green' : 'color-red' %>"><%= todo.todoText %> - Completed: <%= todo.completed ? 'Yes' : 'No' %></li>
    <% }) %>
  </ul>

  <form action="/todos/add" method="POST">
    <label>
      <span>Text:</span>
      <input type="text" name="todoText" placeholder="Walk dog">
    </label>
    <label>
      <span>User:</span>
      <input type="text" name="user" placeholder="John Smith">
    </label>
    <button type="submit">Add To Do</button>
  </form>

<%- include('partials/footer') %>